---
import { cn } from "utils/cn";

type TextElement = "h1" | "h2" | "h3" | "p";

interface Props {
  className?: string;
  element?: TextElement;
  key?: string;
}

const { className, element: Element = "p" } = Astro.props;

const styles = {
  h1: "text-[10rem] font-bold",
  h2: "text-[8rem] font-bold",
  h3: "text-[6rem] font-bold",
  p: "text-[2rem]",
} satisfies Record<TextElement, string>;
---

<Element
  class={cn(styles[Element], className)}
  transition:name="transition-animated-header"
>
  <slot />
</Element>
