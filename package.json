{
  "name": "lightning-talk",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "db:introspect": "drizzle-kit introspect:sqlite",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:migrate": "bun ./src/db/scripts/migrate.ts",
    "db:push": "drizzle-kit push:sqlite",
    "db:studio": "drizzle-kit studio",
    "clean": "git clean -xdf dist .astro node_modules",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test:typecheck": "bun ./node_modules/typescript/bin/tsc --noEmit --pretty",
    "lint": "eslint . --max-warnings 0 --report-unused-disable-directives",
    "lint:fix": "bun lint --fix",
    "fmt": "prettier --write \"**/*.{js,cjs,mjs,ts,tsx,astro}\" --ignore-path .gitignore",
    "fmt:check": "prettier --check \"**/*.{js,cjs,mjs,ts,tsx,astro}\" --ignore-path .gitignore",
    "ci:check": "bun fmt:check & bun lint & bun test:typecheck"
  },
  "dependencies": {
    "@astrojs/mdx": "^1.1.0",
    "@astrojs/node": "^6.0.1",
    "@astrojs/preact": "^3.0.0",
    "@astrojs/tailwind": "^5.0.0",
    "@libsql/client": "^0.3.5",
    "@nanostores/preact": "^0.5.0",
    "@upstash/redis": "^1.22.1",
    "astro": "^3.1.3",
    "better-sqlite3": "^8.7.0",
    "clsx": "^2.0.0",
    "drizzle-orm": "^0.28.6",
    "nanostores": "^0.9.3",
    "preact": "^10.6.5",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.0.24",
    "valibot": "^0.18.0"
  },
  "devDependencies": {
    "@catppuccin/tailwindcss": "^0.1.6",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "bun-types": "^1.0.3",
    "drizzle-kit": "^0.19.13",
    "eslint": "^8.50.0",
    "eslint-plugin-astro": "^0.29.1",
    "eslint-plugin-markdown": "^3.0.1",
    "prettier": "^3.0.3",
    "prettier-plugin-astro": "^0.12.0",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "typescript": "^5.2.2"
  },
  "overrides": {
    "react": "npm:@preact/compat@latest",
    "react-dom": "npm:@preact/compat@latest"
  }
}
